<!DOCTYPE html>
<html lang="en" ng-app="App">
<head>
  <meta charset="utf-8">
  <meta http-equiv="X-UA-Compatible" content="IE=edge">
  <meta name="viewport" content="width=device-width, initial-scale=1">
  <meta name="description" content="">
  <meta name="author" content="">
  <title>Электрик</title>

  <link rel="stylesheet" href="/bundles/app/vendor/bootstrap.css"/>
  <link rel="stylesheet" href="/bundles/app/assets/css/main.css"/>
  <script src="/bundles/app/vendor/jquery-1.12.0.min.js"></script>
  <script src="/bundles/app/vendor/bootstrap.min.js"></script>
  <script src="/bundles/app/src/electrician-api.js"></script>
  <script src="/bundles/app/src/result-api.js"></script>
  <script src="/bundles/app/src/result.js"></script>
  <script src="/bundles/app/src/electrician.js"></script>
</head>

<body>
<div class="container">
  <div class="row">
      <div class="page-header col-md-8">
        <h1>Электрик<small class="pull-right">0</small></h1>
      </div>
      <div class="col-md-8">
          <div class="row" id="board">  
          </div>
      </div>  
      <div class="col-md-2">
          <button id="btn_best"  type="button" class="btn btn-success">Лучшие результата</button> 
      </div>
      
      <div class="modal fade" id="result_window" tabindex="-1" role="dialog" aria-labelledby="mySmallModalLabel">
        <div class="modal-dialog modal-md" role="document">
          <div class="modal-content">
              
              <div class="modal-header">
                <h4 class="modal-title" id="myModalLabel">Поздаврляем вы выиграли за 
                  <span id="step_count">1</span> ходов.
                </h4>
              </div>
              
              <div class="modal-body">
                  
                  <form class="form-horizontal">
                    <div class="form-group">
                      <label for="input_user" class="col-sm-2 control-label">Пользователь </label>
                      <div class="col-sm-10">
                        <input type="text" class="form-control" id="input_user" placeholder="Пользователь">
                      </div>
                    </div>
                  </form>
                  
              </div>
                                
              <div class="modal-footer">
                <button id="btn_save"  type="button" class="btn btn-primary">Сохранить</button>  
                <button id="btn_close" type="button" class="btn btn-default">Закрыть</button>
              </div>
              
          </div>
        </div>
      </div>
      
      <div class="modal fade" id="best_window" tabindex="-1" role="dialog" aria-labelledby="mySmallModalLabel">
        <div class="modal-dialog modal-md" role="document">
          <div class="modal-content">
              
              <div class="modal-header">
                <h4 class="modal-title" id="myModalLabel"> 10 лучших результатов</h4>
              </div>
              
              <div class="modal-body" id="best_list">
                  
              </div>
                                
              <div class="modal-footer"> 
                <button id="btn_close_best" type="button" class="btn btn-default">Закрыть</button>
              </div>
              
          </div>
        </div>
      </div>
      
  </div>
</div>
<script>
    
    let result = new Result(
        new ResultApi(), 
        'result_window', 
        'best_window', 
        'best_list', 
        'step_count'
    );
    
    let board = '{{ board | json_encode() | raw }}';
    let electrician = new Electrician(
        JSON.parse(board), 
        new ElectricianApi(), 
        'board',
        result.onGameCompleted
    );
    electrician.render();
    
    $(document).off('.data-api');
</script>
</body>
</html>
