<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="utf-8">
  <meta http-equiv="X-UA-Compatible" content="IE=edge">
  <meta name="viewport" content="width=device-width, initial-scale=1">
  <meta name="description" content="">
  <meta name="author" content="">
  <title>Туризм</title>
  <link rel="stylesheet" href="/bundles/app/vendor/bootstrap.css"/>
  <script src="/bundles/app/vendor/angular.js"></script>
  <script src="/bundles/app/src/auth/module.js"></script>
  <script src="/bundles/app/src/auth/auth-service.js"></script>
  <script src="/bundles/app/src/auth/auth-controller.js"></script>
</head>

<body ng-app="Auth">
<div class="container">
  <div class="row">
    <br/><br/><br/><br/><br/><br/><br/><br/><br/>
    <div class="col-md-4 col-md-offset-4 panel panel-default" ng-controller="AuthController as authCtrl">
      <h3>Система управления saubol.net</h3>
      <div class="alert alert-warning alert-dismissible" role="alert" ng-show="authCtrl.errorVisible" ng-click="authCtrl.hideError()">
        <button type="button" class="close" data-dismiss="alert" aria-label="Close"><span aria-hidden="true">&times;</span></button>
        <strong>Ошибка!</strong> {{'{{authCtrl.error}}'}}
      </div>
      <form novalidate name="frmLogin">
        <div ng-class="{'form-group': true, 'has-error': frmLogin.login.$error.required && frmLogin.login.$touched}">
          <label for="inp-login" class="sr-only">Логин</label>
          <input type="text" class="form-control" id="inp-login" name="login" ng-model="authCtrl.login" placeholder="Логин" required="">
        </div>
        <div ng-class="{'form-group': true, 'has-error': frmLogin.inppassword.$error.required && frmLogin.inppassword.$touched}">
          <label for="inp-password" class="sr-only">Пароль:</label>
          <input type="password" class="form-control" id="inp-password" name="inppassword" ng-model="authCtrl.password" placeholder="Пароль" required="">
        </div>
        <div class="form-group">
          <button type="submit" ng-disabled="!frmLogin.$valid" ng-click="authCtrl.submit()" class="btn btn-primary btn-block">Войти</button>
        </div>
      </form>
    </div>
  </div>
</div>
</body>
</html>
