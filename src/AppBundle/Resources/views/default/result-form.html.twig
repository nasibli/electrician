<div class="modal fade" id="result_window" tabindex="-1" role="dialog" aria-labelledby="mySmallModalLabel">
    <div class="modal-dialog modal-md" role="document">
      <div class="modal-content">

          <div class="modal-header">
            <h4 class="modal-title" id="myModalLabel">Поздаврляем вы выиграли за 
              <span id="step_count">1</span> ходов.
            </h4>
          </div>

          <div class="modal-body">

              <form class="form-horizontal">
                <div class="form-group">
                  <label for="input_user" class="col-sm-2 control-label">Пользователь </label>
                  <div class="col-sm-10">
                    <input type="text" class="form-control" id="input_user" placeholder="Пользователь">
                  </div>
                </div>
              </form>

          </div>

          <div class="modal-footer">
            <button id="btn_save"  type="button" class="btn btn-primary">Сохранить</button>  
